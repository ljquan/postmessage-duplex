{
    "name": "postmessage-duplex",
    "version": "1.0.0",
    "description": "Lightweight duplex communication library based on postMessage API. Supports iframe and Service Worker.",
    "keywords": [
        "postmessage",
        "postMessage",
        "window.postMessage",
        "iframe",
        "iframe-communication",
        "parent-child",
        "cross-frame",
        "service-worker",
        "sw",
        "duplex",
        "communication",
        "channel",
        "messaging",
        "cross-origin",
        "cors",
        "typescript",
        "rpc",
        "request-response",
        "promise",
        "async",
        "event-driven",
        "browser",
        "web-api"
    ],
    "main": "dist/index.cjs.js",
    "module": "dist/index.esm.js",
    "browser": "dist/index.umd.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.esm.js",
            "require": "./dist/index.cjs.js"
        }
    },
    "sideEffects": false,
    "files": [
        "dist"
    ],
    "author": "liquidliang <ljquan@qq.com>",
    "repository": {
        "type": "git",
        "url": "https://github.com/ljquan/postmessage-duplex.git"
    },
    "homepage": "https://ljquan.github.io/postmessage-duplex/",
    "bugs": {
        "url": "https://github.com/ljquan/postmessage-duplex/issues"
    },
    "license": "MIT",
    "engines": {
        "node": ">=18.0.0"
    },
    "scripts": {
        "clean": "rimraf dist coverage",
        "prebuild": "npm run clean",
        "build": "rollup --config ./config/rollup.config.mjs",
        "build:watch": "rollup --config ./config/rollup.config.mjs --watch",
        "dev": "concurrently \"npm run build:watch\" \"npm run dev:server\"",
        "dev:server": "cliserver serve . -l -p 7100",
        "typecheck": "tsc --noEmit",
        "lint": "eslint src/**/*.ts --fix",
        "lint:check": "eslint src/**/*.ts",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:ci": "jest --ci --coverage --reporters=default",
        "validate": "npm run typecheck && npm run lint:check && npm run test",
        "ci": "npm run validate && npm run build",
        "size": "npm run build && size-limit",
        "prepublishOnly": "npm run ci",
        "pub": "npm publish",
        "pub:beta": "npm publish --tag beta",
        "pub:dry": "npm publish --dry-run",
        "version:patch": "npm version patch",
        "version:minor": "npm version minor",
        "version:major": "npm version major",
        "docs:dev": "vuepress dev docs",
        "docs:build": "vuepress build docs"
    },
    "size-limit": [
        {
            "path": "dist/index.esm.js",
            "limit": "8 KB"
        }
    ],
    "jest": {
        "transform": {
            ".(ts|tsx)": "ts-jest"
        },
        "testEnvironment": "jsdom",
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "coveragePathIgnorePatterns": [
            "/node_modules/",
            "/test/"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 65,
                "functions": 90,
                "lines": 85,
                "statements": 85
            }
        },
        "collectCoverageFrom": [
            "src/*.{js,ts}"
        ]
    },
    "devDependencies": {
        "@jest/types": "^29.6.3",
        "@lencse/cliserver": "^0.1.2",
        "@rollup/plugin-node-resolve": "^16.0.0",
        "@rollup/plugin-replace": "^6.0.0",
        "@rollup/plugin-terser": "^0.4.4",
        "@rollup/plugin-typescript": "^12.1.2",
        "@size-limit/preset-small-lib": "^12.0.0",
        "@types/jest": "^29.5.14",
        "@typescript-eslint/eslint-plugin": "^8.53.1",
        "@typescript-eslint/parser": "^8.53.1",
        "@vuepress/bundler-vite": "^2.0.0-rc.18",
        "@vuepress/theme-default": "^2.0.0-rc.61",
        "concurrently": "^9.1.0",
        "eslint": "^9.39.2",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "rimraf": "^6.1.0",
        "rollup": "^4.40.0",
        "rollup-plugin-strip-banner": "^3.1.0",
        "sass-embedded": "^1.97.3",
        "size-limit": "^12.0.0",
        "ts-jest": "^29.2.6",
        "tslib": "^2.8.1",
        "typescript": "^5.8.0",
        "vuepress": "^2.0.0-rc.18"
    }
}
